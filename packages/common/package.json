{
  "name": "@moonklabs/mcp-common",
  "version": "0.1.0",
  "description": "Common utilities for moonklabs MCP servers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "moonklabs",
    "common",
    "utilities"
  ],
  "author": "moonklabs",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pino": "^7.0.4",
    "nock": "^14.0.10",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "node-cache": "^5.1.2",
    "pino": "^10.1.0",
    "zod": "^4.2.1"
  }
}
