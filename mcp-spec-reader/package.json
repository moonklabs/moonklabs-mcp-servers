{
  "name": "mcp-spec-reader",
  "version": "1.0.0",
  "description": "MCP Server for reading Notion spec documents (PRD, Architecture, Stories)",
  "type": "module",
  "main": "dist/stdio.js",
  "bin": {
    "mcp-spec-reader": "dist/stdio.js"
  },
  "scripts": {
    "dev": "tsx src/stdio.ts",
    "dev:http": "tsx watch src/http.ts",
    "build": "tsc",
    "start": "node dist/stdio.js",
    "start:http": "node dist/http.js",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/stdio.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "typescript",
    "notion",
    "spec-reader"
  ],
  "author": "moonklabs",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@moonklabs/mcp-common": "*",
    "@notionhq/client": "^2.2.0",
    "express": "^4.21.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^22.0.0",
    "@vitest/ui": "^2.0.0",
    "nock": "^13.5.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  }
}
