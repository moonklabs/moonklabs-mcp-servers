# Notion API 설정
# https://www.notion.so/my-integrations 에서 생성
NOTION_TOKEN=secret_xxxxxxxxxxxxxxxxxxxxx

# MKL작업 데이터베이스 ID
# Notion 페이지 URL에서 추출: https://notion.so/{workspace}/{database_id}?v=...
NOTION_TASK_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# MKL스프린트 데이터베이스 ID (스프린트 조회용)
NOTION_SPRINT_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# HTTP 서버 설정
PORT=3434
HOST=0.0.0.0

# 로그 레벨 설정
# 가능한 값: debug, info, warn, error, silent
# debug: 모든 로그 (요청 본문 포함)
# info: 일반 로그 (기본값)
# warn: 경고 이상
# error: 에러만
# silent: 로그 출력 안 함
LOG_LEVEL=info

# 인증 설정
# 형식: token:email:name,token:email:name,...
# 예: AUTH_USERS=abc123:user1@moonklabs.com:홍길동,def456:user2@moonklabs.com:김철수
AUTH_USERS=

# 인증 필수 여부 (true면 인증 없이 접근 불가, false면 익명 접근 허용)
# 기본값: true
AUTH_REQUIRED=true
