{
  "name": "mcp-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript MCP Server Boilerplate",
  "type": "module",
  "main": "dist/stdio.js",
  "bin": {
    "mcp-boilerplate": "dist/stdio.js"
  },
  "scripts": {
    "dev": "tsx src/stdio.ts",
    "dev:http": "tsx watch src/http.ts",
    "build": "tsc",
    "start": "node dist/stdio.js",
    "start:http": "node dist/http.js",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/stdio.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.21.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
