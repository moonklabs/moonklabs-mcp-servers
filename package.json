{
  "name": "moonklabs-mcp-servers",
  "version": "1.0.0",
  "private": true,
  "description": "MCP Server Monorepo for moonklabs",
  "type": "module",
  "workspaces": [
    "packages/*",
    "mcp-*"
  ],
  "scripts": {
    "build:all": "npm run build -ws --if-present",
    "test:all": "npm run test -ws --if-present",
    "typecheck:all": "npm run typecheck -ws --if-present",
    "dev:all": "npm run dev -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "format": "npm run format -ws --if-present",
    "clean": "rm -rf packages/*/dist mcp-*/dist",
    "prepare": "npm run build -w packages/common"
  },
  "engines": {
    "node": ">=20"
  },
  "author": "moonklabs",
  "license": "MIT"
}
